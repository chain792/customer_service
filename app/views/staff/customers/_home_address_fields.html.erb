<%= f.fields_for :home_address, f.object.customer.home_address do |ff| %>
  <%= postal_code_block(ff, :postal_code, "郵便番号", size: 7, required: true) %>
  <%= drop_down_list_block(ff, :prefecture, "都道府県", Address::PREFECTURE_NAMES, required: true) %>
  <%= text_field_block(ff, :city, "市区町村", size: 16, required: true) %>
  <%= text_field_block(ff, :address1, "町域、番地等", size: 40, required: true) %>
  <%= text_field_block(ff, :address2, "建物名、部屋番号等", size: 40) %>
<% end %>
