<% @title = "顧客詳細情報" %> 
<h1><%= @title %></h1>

<div class="table-wrapper">
  <table class="attributes">
    <tr><th colspan="2">基本情報</th></tr>
    <tr><th>氏名</th><td><%= @customer.decorate.full_name %></td></tr>
    <tr><th>フリガナ</th><td><%= @customer.decorate.full_name_kana %></td></tr>
    <tr><th>生年月日</th><td class="date"><%= @customer.decorate.birthday %></td></tr>
    <tr><th>性別</th><td><%= @customer.decorate.gender %></td></tr>
    <tr><th>登録日時</th><td class="date"><%= @customer.decorate.created_at %></td></tr>
    <tr><th>更新日時</th><td class="date"><%= @customer.decorate.updated_at %></td></tr>
    <% if @customer.home_address %>
      <tr><th colspan="2">自宅住所</th></tr>
      <tr><th>郵便番号</th><td><%= @customer.home_address.decorate.postal_code %></td></tr>
      <tr><th>都道府県</th><td><%= @customer.home_address.prefecture %></td></tr>
      <tr><th>市区町村</th><td><%= @customer.home_address.city %></td></tr>
      <tr><th>町域、番地等</th><td><%= @customer.home_address.address1 %></td></tr>
      <tr><th>建物名、部屋番号等</th><td><%= @customer.home_address.address2 %></td></tr>
    <% end %>
    <% if @customer.work_address %>
      <tr><th colspan="2">勤務先</th></tr>
      <tr><th>会社名</th><td><%= @customer.work_address.company_name %></td></tr>
      <tr><th>部署名</th><td><%= @customer.work_address.division_name %></td></tr>
      <tr><th>郵便番号</th><td><%= @customer.work_address.decorate.postal_code %></td></tr>
      <tr><th>都道府県</th><td><%= @customer.work_address.prefecture %></td></tr>
      <tr><th>市区町村</th><td><%= @customer.work_address.city %></td></tr>
      <tr><th>町域、番地等</th><td><%= @customer.work_address.address1 %></td></tr>
      <tr><th>建物名、部屋番号等</th><td><%= @customer.work_address.address2 %></td></tr>
    <% end %>
  </table>
</div>
